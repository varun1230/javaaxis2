<?xml version="1.0" encoding="UTF-8"?>

<serviceGroup name="AddNumbers">
  <!-- Invoke SpringInit on server startup and shutdown -->
  <service name="AddNumbers" class="org.vstech.test.webservice.axis2.spring.SpringInit">
    <description>
         simple spring example - inside the AAR
    </description>
    <!-- need the TCCL param when using spring inside the AAR -->
    <parameter name="ServiceTCCL">composite</parameter>
    <parameter name="ServiceObjectSupplier">org.apache.axis2.extensions.spring.receivers.SpringAppContextAwareObjectSupplier</parameter>
    <parameter name="SpringBeanName">springAwareService</parameter>
    <operation name="addNumbers" mep="" namespace = "">
        <messageReceiver class="org.apache.axis2.receivers.RawXMLINOutMessageReceiver"/>
    </operation>
  </service>
</serviceGroup>